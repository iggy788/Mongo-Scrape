	<!-- Jumbotron for Title -->
	<div class="jumbotron" style="background: url(./public/assets/img/newspaper.jpg); background-size: cover;">
		<div class="overlay">
		</div>
		<h1 class="text-center">
			<strong>
				<i class="fa fa-newspaper-o"></i> New York Times Article Search</strong>
		</h1>
	</div>
	<div class="row">
		<div class="col-md-12">
			{{#each articles}}
				<div class="panel panel-primary">
					<div class="panel-heading row">
						<div class="col-xs-9">
							<h3 class="panel-title pull-left">{{this.title}}</h3>
						</div>
						<div class="col-xs-3">
							<form action="/save" method="POST">
								<input id="article-title" type="hidden" name="title" value="{{this.title}}">
								<input id="article-summary" type="hidden" name="link" value= {{this.summary}}>
								<input id="article-link" type="hidden" name="link" value= {{this.link}}>
								<button type="submit" class="btn btn-default pull-right">SAVE ARTICLE</button>
							</form>
						</div>
					</div>
					<div class="row">
						<div class="col-xs-12>">
							<div class="panel-body">
								<p>Brief Summary of Article: <br>{{this.summary}}</p>
							</div>
						</div>
					</div>
					<div class="row">
						<div class="col-xs-12>">
							<div class="panel-body">
								<p>Go to Story: <br>{{this.link}}</p>
							</div>
						</div>
					</div>
				</div>
			{{/each}}
		</div>
	</div>
</div>