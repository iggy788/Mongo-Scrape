<!-- Main container -->
<div class="container">
	<div class="jumbotron"">
		<div class="overlay">
		</div>
		<h1 class="text-center">
			<strong>
				<i class="fa fa-newspaper-o"></i> New York Times
				Article Search</strong>
		</h1>
	</div>
	<div class="row">
		<div class="col-md-12">
			{{#each articles}}
				<div class="panel panel-primary">
					<div class="panel-heading row">
						<div class="col-xs-9">
							<h3 class="panel-title pull-left">{{this.title}}</h3>
						</div>
						<div class="col-xs-3">
							<form action="/save" method="POST">
								<input id="article-title" type="hidden" name="title" value="{{this.title}}">
								<input id="article-summary" type="hidden" name="summary" value= {{this.summary}}>
								<input id="article-link" type="hidden" name="link" value= {{this.link}}>
								<button type="submit" class="btn btn-default pull-right">SAVE ARTICLE</button>
							</form>
						</div>
					</div>
					<div class="row">
						<div class="col-xs-12">
							<div class="panel-body">
								<div>
									<strong>Brief Summary of Article:</strong>
									<br>{{this.summary}}
								</div>
								<div>
									<strong>Go to Story:</strong>
									<br>{{this.link}}
								</div>
							</div>
						</div>
					</div>
				</div>
			{{/each}}
		</div>
	</div>
</div>